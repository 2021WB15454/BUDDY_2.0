# BUDDY 2.0 Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# Pinecone Vector Database Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=quickstart
USE_VECTOR_MEMORY=1

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.fbbl9jd.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
USE_MONGODB=1
MONGODB_DATABASE=BUDDY_DB
MONGODB_TIMEOUT=10000

# BUDDY Settings
BUDDY_ENV=development
BUDDY_DEBUG=1
BUDDY_JWT_SECRET=change-this-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Weather API (Optional)
WEATHER_API_KEY=your_weather_api_key_here

# Production Configuration Examples:
# BUDDY_ENV=production
# BUDDY_DEBUG=0
# USE_MONGODB=1
# USE_VECTOR_MEMORY=1

# Local Development Examples:
# BUDDY_ENV=development
# BUDDY_DEBUG=1
# USE_MONGODB=0  # Use JSON fallback for local testing
# USE_VECTOR_MEMORY=1