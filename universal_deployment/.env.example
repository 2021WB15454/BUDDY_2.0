# Environment variables for BUDDY Universal Deployment
# Copy this file to .env and customize for your environment

# Core Configuration
ENVIRONMENT=development
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql://buddy:buddy_secure_2025@postgres:5432/buddydb
REDIS_URL=redis://:buddy_redis_2025@redis:6379/0

# ChromaDB Configuration
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000

# Security
JWT_SECRET=buddy_jwt_secret_2025_change_in_production
ENCRYPTION_KEY=buddy_encryption_key_2025_change_in_production

# External APIs
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=your-anthropic-key-here

# Sync Configuration
SYNC_INTERVAL=30
MAX_SYNC_RETRIES=3

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Features
ENABLE_VOICE=true
ENABLE_EMBEDDINGS=true
ENABLE_REAL_TIME_SYNC=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS
ALLOWED_ORIGINS=*
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# Development
DEBUG=false
RELOAD=false
